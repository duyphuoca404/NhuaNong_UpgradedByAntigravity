<UserControl x:Class="NhuaNong.Wpf.UserControls.HopperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NhuaNong.Wpf.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <!-- Hopper Image -->
        <Image Stretch="Fill">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="Source" Value="/Assets/Images/_pheu_chua01.png"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HopperType}" Value="Type1">
                            <Setter Property="Source" Value="/Assets/Images/_pheu_chua01.png"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HopperType}" Value="Type2">
                            <Setter Property="Source" Value="/Assets/Images/_pheu_chua02.png"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HopperType}" Value="Type3">
                            <Setter Property="Source" Value="/Assets/Images/_pheu_chua03.png"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HopperType}" Value="Type4">
                            <Setter Property="Source" Value="/Assets/Images/_pheu_chua04.png"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HopperType}" Value="CatDa">
                            <Setter Property="Source" Value="/Assets/Images/_pheu_chua_catda.png"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>

        <!-- Label -->
        <Border Background="#CC000000" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Padding="2">
            <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Foreground="White" FontSize="10" FontWeight="Bold"/>
        </Border>
    </Grid>
</UserControl>
