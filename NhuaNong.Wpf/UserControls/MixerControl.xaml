<UserControl x:Class="NhuaNong.Wpf.UserControls.MixerControl"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NhuaNong.Wpf.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="470">
    <Grid>
        <!-- Mixer Image -->
        <Image Source="/Assets/Images/_noi_tron.png" Stretch="Fill"/>

        <!-- Status Displays (Digital Numbers) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <Border Background="Black" BorderBrush="Gray" BorderThickness="1" Width="60" Height="25" Margin="5">
                <TextBlock Text="0/0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Consolas"/>
            </Border>
            <Border Background="Black" BorderBrush="#FF00FF00" BorderThickness="1" Width="60" Height="25" Margin="5">
                <TextBlock Text="{Binding MixingTime, ElementName=root, StringFormat={}{0:0}}" Foreground="#FF00FF00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Consolas" FontSize="16"/>
            </Border>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30">
             <Border Background="Black" BorderBrush="#FF00FF00" BorderThickness="1" Width="60" Height="25" Margin="5">
                <TextBlock Text="{Binding DischargingTime, ElementName=root, StringFormat={}{0:0}}" Foreground="#FF00FF00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Consolas" FontSize="16"/>
            </Border>
             <Border Background="Black" BorderBrush="#FF00FF00" BorderThickness="1" Width="60" Height="25" Margin="5">
                <TextBlock Text="0" Foreground="#FF00FF00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Consolas" FontSize="16"/>
            </Border>
        </StackPanel>

        <!-- Door Status (Bottom Bar) -->
        <Rectangle Height="10" VerticalAlignment="Bottom" Fill="Gray" Stroke="Black"/>
        
    </Grid>
</UserControl>
